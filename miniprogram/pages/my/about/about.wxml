<view class="background" style="width:750rpx;height:100vh;background-color:white">
  <view class="shang"
    style="display:flex;flex-direction:column;justify-content:space-around;align-items:center;height:260rpx;margin-top: 100rpx;">
    <image class="tubiao" src="/images/xiaohui.png"
      style="width:200rpx;height:200rpx;border-radius:50%;overflow: hidden;"></image>
    <view class="wb1" style="color:#FFFFFF;font-size:120%;margin-top:10rpx">{{nm}}</view>
  </view>

  <view class="jieshao" style="margin-top:100rpx">
    <view class="line"></view>

    <view class="yitiao" style="display:flex;justify-content:space-between;margin:30rpx" bindtap="bangzhu">
      <view class="zuo" style="display:flex;flex-direction:column">
        <view class="biaoti" style="color:black">查看帮助</view>
        <view class="neirong" style="font-size:80%;color:black">小程序的使用说明和帮助</view>
      </view>
      <view class="you" style="display:flex;align-items:center">
        <view class="biaoti" style="font-size:80%;color:black">点击查看</view>
        <image class="youbian" src="/images/icon/you.png" style="width:50rpx;height:50rpx"></image>
      </view>
    </view>
    <view class="line"></view>

    <view class="yitiao" style="display:flex;justify-content:space-between;margin:30rpx" bindtap="women">
      <view class="zuo" style="display:flex;flex-direction:column">
        <view class="biaoti" style="color:black">关于我们</view>
        <view class="neirong" style="font-size:80%;color:black">关于我们的信息</view>
      </view>
      <view class="you" style="display:flex;align-items:center">
        <view class="biaoti" style="font-size:80%;color:black">点击查看</view>
        <image class="youbian" src="/images/icon/you.png" style="width:50rpx;height:50rpx"></image>
      </view>
    </view>
    <view class="line"></view>
    <view class="yitiao" style="display:flex;justify-content:space-between;margin:30rpx" bindtap="fuzhi"
      data-item="{{ID}}">
      <view class="zuo" style="display:flex;flex-direction:column">
        <view class="biaoti" style="color:black">我的ID</view>
        <view class="neirong" style="font-size:80%;color:black">{{ID}}</view>
      </view>
      <view class="you" style="display:flex;align-items:center">
        <view class="biaoti" style="font-size:80%;color:black">点击复制</view>
        <image class="youbian" src="/images/icon/you.png" style="width:50rpx;height:50rpx"></image>
      </view>
    </view>
    <view class="line"></view>
  </view>

</view>